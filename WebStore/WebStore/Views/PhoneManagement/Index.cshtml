@model PagedList.PagedList<WebStore.Models.Phone>
@using PagedList;
@using PagedList.Mvc;

@{ 
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<p>
    @Html.ActionLink("Add Phone", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().PhoneName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().CoverImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().UpdateDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SoLuong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MaNSX)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ProductId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img src="@Url.Content("~/ImagePhone/"+item.CoverImage)"width="50" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaNSX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PhoneId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PhoneId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PhoneId })
            </td>
        </tr>
    }

</table>
<center>Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount</center>

<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new {page = page}))
</div>


